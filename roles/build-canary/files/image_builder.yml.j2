apiVersion: v1
kind: BuildConfig
metadata:
  labels:
    app: ci-artifacts
  name: "{{ build_operand_canary_imagestream_name }}"
  namespace: "{{ build_operand_canary_namespace }}"
spec:
  output:
    to:
      kind: ImageStreamTag
      name: "{{ build_operand_canary_imagestream_name }}:{{ build_operand_canary_tag }}"
      namespace: "{{ build_operand_canary_namespace }}"
  resources: {}
  source:
    type: Git
    git:
      uri: "{{ build_operand_canary_git_repo }}"
      ref: "{{ build_operand_canary_git_ref }}"
    contextDir: "{{ build_operand_canary_docker_context }}"
  triggers:
  - type: "ConfigChange"
  strategy:
    type: Docker
    dockerStrategy:
      buildArgs: {{ build_operand_canary_docker_build_args }}
      dockerfilePath: "{{ build_operand_canary_dockerfile }}"
      {{ build_operand_canary_extra_docker_strategy }}
